<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eduplanet_e_learningapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EduPlanet_ELearningApp">
        <activity android:name=".Activities.ChangePasswordActivity"></activity>
        <activity android:name=".Activities.SearchActivity" />
        <activity android:name=".Activities.ShowingProfileActivity" />
        <activity android:name=".Activities.EditProfileActivity" />
        <activity android:name=".Activities.UserProfileActivity" />
        <activity android:name=".Activities.GiveAnswerActivity" />
        <activity android:name=".Activities.ShowAttachImgActivity" />
        <activity android:name=".Activities.DoubtAnswersActivity" />
        <activity android:name=".Activities.AskDoubtActivity" />
        <activity android:name=".Activities.SendingImageActivity" />
        <activity android:name=".Activities.CommentActivity" />
        <activity android:name=".Activities.CreatePostActivity" />
        <activity android:name=".Activities.IntroQuizScoreActivity" />
        <activity android:name=".Activities.IntroQuizActivity" />
        <activity android:name=".Activities.ChooseClassActivity" />
        <activity android:name=".Activities.FacebookAuthActivity" />
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.SignupActivity" />
        <activity android:name=".Activities.MainActivity" />
        <activity
            android:name=".Activities.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.facebook.sdk.ClientToken"
            android:value="@string/facebook_client_token" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>